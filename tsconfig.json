{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "declaration": false,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "declarationMap": false,
        "noImplicitAny": true,
        "noEmitOnError": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports":true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "lib"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "lib",
	"node_modules"
    ]
}
